<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParametrageActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/b_accueil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accueil" />

        <TextView
            android:id="@+id/t_ajouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter" />

        <EditText
            android:id="@+id/e_nomAjout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nom du produit"
            android:inputType="textPersonName" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/r_entree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EntrÃ©e" />

            <RadioButton
                android:id="@+id/r_plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plat" />

            <RadioButton
                android:id="@+id/r_dessert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dessert" />
        </RadioGroup>

        <Button
            android:id="@+id/b_ajouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter" />

        <Button
            android:id="@+id/b_gestPlats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestion des plats" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>